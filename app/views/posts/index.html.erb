<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <!-- Dashboard <small>Statistics Overview</small> -->
            <h1>Listing Posts</h1>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <!-- <i class="fa fa-dashboard"></i>Ini Breadcrumb -->
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">

    <div class="col-sm-12">  
  <p id="notice"><%= notice %></p>

  <%= link_to ' New', new_post_path, class:"fa fa-plus-circle fa-lg" %>
  <br><br>

  <table class="table table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Slug</th>
        <!-- <th>Content</th> -->
        <!-- <th>Image Url</th> -->
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.name %></td>
          <td><%= post.category.cat_name if post.category %></td>
          <td><%= post.slug %></td>
          <!-- <td><%= post.content %></td> -->
          <!-- <td><%= post.image_url %></td> -->
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

<%= will_paginate @posts, :style => 'color:blue' %>

</div>
    
