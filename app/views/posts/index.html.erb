<div class="cotainer">  
  <p id="notice"><%= notice %></p>

  <h1>Listing Posts</h1>
  <br>
  <%= link_to ' New', new_post_path, class:"fa fa-plus-circle fa-lg" %>
  <table class="table table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Slug</th>
        <!-- <th>Content</th> -->
        <!-- <th>Image Url</th> -->
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.name %></td>
          <td><%= post.category.cat_name if post.category %></td>
          <td><%= post.slug %></td>
          <!-- <td><%= post.content %></td> -->
          <!-- <td><%= post.image_url %></td> -->
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

<%= will_paginate @posts, :style => 'color:blue' %>

</div>